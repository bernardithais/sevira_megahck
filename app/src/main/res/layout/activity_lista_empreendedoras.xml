<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empreendtela"
    tools:context=".ListaEmpreendedorasActivity">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/empresa1"
                android:layout_width="220dp"
                android:layout_height="187dp"
                android:foreground="@drawable/loja1">
            </ImageView>

            <ImageView
                android:id="@+id/empresa2"
                android:layout_width="220dp"
                android:layout_height="187dp"
                android:foreground="@drawable/loja2">
            </ImageView>

            <ImageView
                android:id="@+id/empresa3"
                android:layout_width="220dp"
                android:layout_height="168dp"
                android:foreground="@drawable/loja3">
            </ImageView>

            <ImageView
                android:id="@+id/empresa4"
                android:layout_width="220dp"
                android:layout_height="199dp"
                android:foreground="@drawable/loja4">
            </ImageView>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>